{
  "name": "ngx-password-strength-meter",
  "version": "1.1.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:lib:prod": "npm run build -- --prod",
    "build:lib:watch": "ng build -- --watch",
    "build:showcase": "ng build ngx-password-strength-meter-showcase",
    "build:showcase:prod": "npm run build:showcase -- --prod --output-path docs --base-href ngx-password-strength-meter",
    "test": "ng test ngx-password-strength-meter",
    "coverage:lib": "ng test ngx-password-strength-meter --code-coverage --watch=false",
    "coverage:lib:report": "cat ./coverage/ngx-password-strength-meter/lcov.info | codecov",
    "lint": "ng lint",
    "format:check": "prettier --list-different 'projects/**'",
    "format:write": "prettier --write 'projects/**'",
    "publish": "cd dist/ngx-password-strength-meter && npm publish",
    "release": "standard-version",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.10",
    "@angular/common": "~11.2.10",
    "@angular/compiler": "~11.2.10",
    "@angular/core": "~11.2.10",
    "@angular/forms": "~11.2.10",
    "@angular/platform-browser": "~11.2.10",
    "@angular/platform-browser-dynamic": "~11.2.10",
    "@angular/router": "~11.2.10",
    "rxjs": "~6.6.3",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2",
    "zxcvbn3": "^0.1.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.9",
    "@angular/cli": "~11.2.9",
    "@angular/compiler-cli": "~11.2.10",
    "@angular/language-service": "~11.2.10",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "@types/zxcvbn": "^4.4.0",
    "codecov": "^3.8.0",
    "codelyzer": "^6.0.0",
    "husky": "^4.3.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^10.4.0",
    "ng-packagr": "^11.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "protractor": "~7.0.0",
    "standard-version": "^9.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "projects/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
